{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react-hooks",
    "prettier",
    "import",
    "@typescript-eslint"
  ],
  "ignorePatterns": ["node_modules/**/*", "build/**/*", "**/*.html", "vite.config.ts"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": ["off"],
    "curly": "error",
    "no-default-export": 0,
    "no-empty-function": 0,
    "@typescript-eslint/no-empty-function": ["off"]
  }
}
